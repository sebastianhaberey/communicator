{
  "private": true,
  "name": "communicator",
  "scripts": {
    "deploy": "yarn build; yarn clean; yarn copy;",
    "clean": "rimraf deploy/backend deploy/frontend",
    "copy": "yarn copy-backend; yarn copy-frontend; yarn copy-config",
    "build": "yarn workspaces run build",
    "copy-backend": "copyfiles --all --up 4 \"packages/communicator-backend/dist/src/**/*\" deploy/backend",
    "copy-frontend": "copyfiles --all --up 3 \"packages/communicator-frontend/dist/**/*\" deploy/frontend",
    "copy-config": "copyfiles --soft --up 1 scripts/run.config.sh scripts/communicator.config.js scripts/run.sh deploy"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2"
  }
}
